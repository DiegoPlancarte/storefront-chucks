	</mantle.party.Party>

	<!-- Ziziwork Retail Warehouse Facility -->
	<mantle.facility.Facility facilityId="FACELESS_CORP_WH" facilityTypeEnumId="FcTpWarehouse" assetAllowIssueOverQoh="Y"
		ownerPartyId="ORG_FACELESS_CORP" facilityName="Faceless Corporation's Retail Warehouse">
		<!--<contactMechs contactMechId="ORG_ZIZI_RTL_SA" contactMechPurposeId="PostalPrimary"/>-->
		<!--<contactMechs contactMechId="ORG_ZIZI_RTL_PT" contactMechPurposeId="PhonePrimary"/>-->
	</mantle.facility.Facility>

	<!-- Ziziwork Retail ProductStore -->
	<mantle.product.store.ProductStore productStoreId="CHUCKS_STORE" storeName="Chucks Retail Store"
		organizationPartyId="ORG_FACELESS_CORP" inventoryFacilityId="FACELESS_CORP_WH" reservationOrderEnumId="AsResOrdFifoRec"
		wikiSpaceId="" defaultLocale="en_US" defaultCurrencyUomId="USD" taxGatewayConfigId="LOCAL" requireInventory="Y" productDataDocumentId="">
